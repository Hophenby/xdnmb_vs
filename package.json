{
  "name": "xdnmb_vs",
  "displayName": "xdnmb_vs",
  "description": "dalib",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "webview": true,
    "hoverProvider": true
  },
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xdnmb_vs.searchTid",
        "title": "Search Thread ID"
      },
      {
        "command": "xdnmb_vs.refreshForumGroup",
        "title": "Refresh Forum Group"
      },
      {
        "command": "xdnmb_vs.resetForumGroup",
        "title": "Reset Forum Group"
      },
      {
        "command": "xdnmb_vs.nextReply",
        "title": "Next"
      },
      {
        "command": "xdnmb_vs.prevReply",
        "title": "Previous"
      },
      {
        "command": "xdnmb_vs.firstReply",
        "title": "First"
      },
      {
        "command": "xdnmb_vs.lastReply",
        "title": "Last"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "xdnmb_vs.refreshForumGroup",
          "when": "view == forumList"
        },
        {
          "command": "xdnmb_vs.resetForumGroup",
          "when": "view == forumList"
        }
      ]
    },
    "configuration": {
      "title": "xdnmb Configuration",
      "properties": {
        "xdnmb_vs.feedId": {
          "type": "string",
          "default": "",
          "description": "订阅过的串。当前使用的订阅ID"
        },
        "xdnmb_vs.cachePath": {
          "type": "string",
          "default": "./cache",
          "description": "缓存路径"
        },
        "xdnmb_vs.cookie": {
          "type": "string",
          "default": "",
          "description": "饼干（重启生效）"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "forumExplorer",
          "title": "版块列表",
          "icon": "assets/XD.svg"
        }
      ]
    },
    "views": {
      "forumExplorer": [
        {
          "id": "forumList",
          "name": "版块列表",
          "icon": "assets/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "cheerio": "^1.0.0-rc.12",
    "markdown-it": "^14.1.0",
    "moment": "^2.30.1",
    "puppeteer": "^22.8.2",
    "sqlite3": "^5.1.7"
  }
}
